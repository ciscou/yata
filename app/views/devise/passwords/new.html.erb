<h1>Forgot your password?</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<div class="row"><div class="col-md-10 col-lg-8">
  <div class="form-group <%= "has-error" if resource.errors[:email].any? %>">
    <%= f.label :email, class: "control-label" %><br />
    <div class="input-group">
      <div class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></div>
      <%= f.email_field :email, class: "form-control", placeholder: "someone@example.com", autofocus: true %>
    </div>
    <% if resource.errors[:email].any? %>
      <p class="help-block"><%= resource.errors[:email].to_sentence %></p>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.submit "Send me reset password instructions", class: "btn btn-lg btn-block btn-success" %>
  </div>
</div></div>
<% end %>

<%= render "devise/shared/links" %>
