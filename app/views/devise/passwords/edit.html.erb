<h1>Change your password</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
<div class="row"><div class="col-md-10 col-lg-8">
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group <%= "has-error" if resource.errors[:password].any? %>">
    <%= f.label :password, "New password", class: "control-label" %>
    <div class="input-group">
      <div class="input-group-addon"><span class="fa fa-asterisk"></span></div>
      <%= f.password_field :password, class: "form-control", placeholder: "************", autocomplete: "off" %>
    </div>
    <% if resource.errors[:password].any? %>
      <p class="help-block"><%= resource.errors[:password].to_sentence %></p>
    <% end %>
  </div>

  <div class="form-group <%= "has-error" if resource.errors[:password_confirmation].any? %>">
    <%= f.label :password_confirmation, "Confirm new password", class: "control-label" %>
    <div class="input-group">
      <div class="input-group-addon"><span class="fa fa-asterisk"></span></div>
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "************", autocomplete: "off" %>
    </div>
    <% if resource.errors[:password_confirmation].any? %>
      <p class="help-block"><%= resource.errors[:password_confirmation].to_sentence %></p>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.submit "Change my password", class: "btn btn-lg btn-block btn-success" %>
  </div>
</div></div>
<% end %>

<%= render "devise/shared/links" %>
