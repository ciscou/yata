<%= form_for @task, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> /Task</legend>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :frequency, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :frequency, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :due_at, :class => 'control-label' %>
      <div class="controls">
        <%= f.datetime_select :due_at, :class => 'datetime_select' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :reminder_at, :class => 'control-label' %>
      <div class="controls">
        <%= f.datetime_select :reminder_at, :class => 'datetime_select' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :reminder_sent, :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :reminder_sent, :class => 'check_box' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', tasks_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
