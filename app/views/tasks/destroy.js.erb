$("#task_<%= @task.id %>").html($("<%= j render @task %>").html())
  .removeClass("todo").removeClass("done").removeClass("delayed")
  <% if @task.delayed? %>
    .addClass("delayed")
  <% end %>
  .addClass("<%= @task.done? ? "done" : "todo" %>");

<% Task::SCOPES.each do |show| %>
  $(".nav.nav-pills.nav-stacked .<%= show %>").html("<%= j render "layouts/#{show}_link_tab" %>");
<% end %>
