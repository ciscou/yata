<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.name, task_path(task) %></td>
        <td style="text-align: right">
          <%= link_to content_tag(:i, "", :class => "icon-ok icon-white") + " Done", task, :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-success' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
