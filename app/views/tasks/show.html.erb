<div class="page-header">
  <h1>Task</h1>
</div>

<p>
  <b>Name</b><br>
  <%= @task.name %>
</p>

<p>
  <b>Due at <%= @task.due_at.to_s(:short) %></b><br>
  <%= time_ago_or_since_in_words @task.due_at %>
</p>

<p>
  <b>Reminder</b><br>
  <% if @task.reminder_send_before_due_at == 0 %>
    On time
  <% elsif @task.reminder_send_before_due_at.present? %>
    <%= time_ago_in_words @task.reminder_send_before_due_at.minutes.ago %> before
  <% else %>
    Never
  <% end %>
</p>

<div class="form-actions">
  <%= link_to 'Back', tasks_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_task_path(@task), :class => 'btn' %>
  <%= link_to 'Delete', task_path(@task), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
