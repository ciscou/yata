<div class="page-header">
  <h1><%= @task.name %></h1>
</div>

<p>
  <b>Due at <%= format_due_at @task.due_at %></b><br>
  <span class="<%= "delayed" if @task.delayed? %>"><%= jquery_time_ago @task.due_at %></span>
</p>

<p>
  <b>Reminder</b><br>
  <%= reminder_beforehand_due_at @task %>
</p>

<% if @task.url.present? %>
  <p>
    <b>Url</b><br>
    <%= link_to @task.url, @task.url %>
  </p>
<% end %>

<% if @task.location.present? %>
  <p>
    <b>Location</b><br>
    <%= link_to "Open in Google Maps", root_url(protocol: "https://", host: "maps.google.es", port: nil, q: @task.location) %>
  </p>
<% end %>

<% if @task.description.present? %>
  <p class="collapse-bottom">
    <b>Description</b>
  </p>
  <%= simple_format @task.description %>
<% end %>

<%= form_tag task_shares_path(@task), class: "form-inline" do |f| %>
  <b>Share this task</b><br/>
  <%= email_field_tag :email, nil, required: true, placeholder: "e-mail", style: "width: 190px" %>
  <%= submit_tag "Share", class: "btn" %>
<% end %>

<div class="form-actions">
  <%= link_to icon_and_text("icon-chevron-left", "Back"), tasks_path, :class => 'btn'  %>
  <%= link_to icon_and_text("icon-edit", "Edit"), edit_task_path(@task), :class => 'btn' %>
  <%= link_to_destroy_task(@task, true) %>
</div>
